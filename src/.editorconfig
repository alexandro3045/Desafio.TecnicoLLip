[*.cs]

# CS0109: Member does not hide an inherited member; new keyword is not required
dotnet_diagnostic.CS0109.severity = none

# CA1031: Do not catch general exception types
dotnet_diagnostic.CA1031.severity = none

# CA1036: Override methods on comparable types
dotnet_diagnostic.CA1036.severity = none

# CS0693: Type parameter has the same name as the type parameter from outer type
dotnet_diagnostic.CS0693.severity = none

# CA1063: Implement IDisposable Correctly
dotnet_diagnostic.CA1063.severity = none

# IDE0052: Remove unread private members
dotnet_diagnostic.IDE0052.severity = none

# CS1998: Async method lacks 'await' operators and will run synchronously
dotnet_diagnostic.CS1998.severity = none

# CA1820: Test for empty strings using string length
dotnet_diagnostic.CA1820.severity = none

# IDE0025: Use expression body for properties
csharp_style_expression_bodied_properties = false:silent

# IDE0050: Convert to tuple
dotnet_diagnostic.IDE0050.severity = none

# IDE0027: Use expression body for accessors
csharp_style_expression_bodied_accessors = false:silent

# xUnit1000: Test classes must be public
dotnet_diagnostic.xUnit1000.severity = none

# xUnit1024: Test methods cannot have overloads
dotnet_diagnostic.xUnit1024.severity = none

# IDE0055: Fix formatting
dotnet_diagnostic.IDE0055.severity = none

# CS0253: Possible unintended reference comparison; right hand side needs cast
dotnet_diagnostic.CS0253.severity = none

# IDE1006: Naming Styles
dotnet_diagnostic.IDE1006.severity = none

# IDE0059: Unnecessary assignment of a value
csharp_style_unused_value_assignment_preference = discard_variable:none
